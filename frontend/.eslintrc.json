{
	"extends": ["next", "next/core-web-vitals", "prettier"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"htmlWhitespaceSensitivity": "strict",
				"useTabs": true,
				"tabWidth": 4,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"printWidth": 160,
				"proseWrap": "always",
				"semi": false,
				"trailingComma": "all",
				"arrowParens": "avoid",
				"endOfLine": "auto"
			}
		]
	}
}
